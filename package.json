{
  "name": "mcgregor-codes",
  "version": "3.0.0",
  "description": "McGregor Codes portfolio website",
  "keywords": [],
  "main": "src/index.js",
  "scripts": {
    "postinstall": "npm run clean",
    "start": "npm run build:dev && run-p watch:* browsersync",
    "build": "NODE_ENV=production run-s js build:static",
    "build:dev": "NODE_ENV=development run-s js:dev build:static",
    "build:static": "run-s css copy html modernizr",
    "clean": "rm -rf dist && mkdir -p dist/js dist/css dist/img",
    "test": "npm run lint && karma start --single-run --browsers Firefox",
    "test:dev": "karma start",
    "browsersync": "browser-sync start --config bs-config.js",
    "css": "postcss -o 'dist/css/styles.css' 'src/index.css'",
    "js:dev": "browserify src/index.js -o dist/js/bundle.js -t babelify",
    "js": "browserify src/index.js -t babelify | uglifyjs -m -c warnings=false > dist/js/bundle.js",
    "copy": "node scripts/copy.js 'src/*.{txt,png}' -o dist",
    "copy:video": "node scripts/copy.js 'src/video/*.{mp4,webm}' -o 'dist'",
    "modernizr": "modernizr -c modernizr-config.json -d dist/js",
    "html": "node scripts/html.js 'src/index.html' -o 'dist' -d 'package.json'",
    "watch:js": "onchange 'src/**/*.js' 'src/**/*.json' -- npm run js:dev",
    "watch:css": "onchange 'src/**/*.css' -- npm run css",
    "watch:html": "onchange 'src/**/*.html' -- npm run html",
    "lint:css": "stylelint 'src/**/*.css'; exit 0",
    "lint:js": "eslint 'src/**/*.js'; exit 0",
    "lint": "run-s lint:*",
    "audio": "node scripts/audio.js 'src/components' -o 'dist/audio'",
    "img:convert": "node scripts/img-convert.js 'src/img/**/*{.png,.jpg}' -o 'dist/img' -t jpg webp -q 80 -s 1536 1280 1024 768 640",
    "img:tinify": "node scripts/tinify.js 'src/img' -o 'dist/img'",
    "texturepack": "node scripts/texture-pack.js 'src/textures/*' -o 'dist/textures' -t -v 1: 0.5:@0.5x",
    "__comment": "use these if vendor.js is required, replacing 'three' example with modules in vendor",
    "__js:vendor": "browserify -r three | uglifyjs -m -c warnings=false > dist/js/vendor.js",
    "__js": "browserify -x three src/index.js -t babelify | uglifyjs -m -c warnings=false > dist/js/bundle.js"
  },
  "config": {
    "__comment": "config passed to index.html template",
    "path": "",
    "social": false,
    "vendor": false
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/ianmcgregor/mcgregor.codes"
  },
  "author": "ianmcgregor",
  "license": "MIT",
  "readmeFilename": "README.md",
  "dependencies": {
    "boid": "^0.3.3",
    "core-js": "^2.4.1",
    "dat-gui": "^0.5.0",
    "events": "^1.1.1",
    "gsap": "^1.19.1",
    "lodash": "^4.17.4",
    "marked": "^0.3.6",
    "normalize.css": "^7.0.0",
    "react": "^15.5.4",
    "react-dom": "^15.5.4",
    "react-micro-router": "^1.2.0",
    "react-motion": "^0.5.0",
    "react-redux": "^5.0.5",
    "redux": "^3.6.0",
    "suitcss-base": "^3.0.0",
    "usfl": "^2.2.9"
  },
  "devDependencies": {
    "async": "^2.4.1",
    "autoprefixer": "^7.1.1",
    "babel-core": "^6.24.1",
    "babel-eslint": "^7.2.3",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-0": "^6.24.1",
    "babelify": "^7.3.0",
    "browser-sync": "^2.18.12",
    "browserify": "^14.4.0",
    "chai": "^4.0.1",
    "chalk": "^1.1.3",
    "connect-history-api-fallback": "^1.3.0",
    "cssnano": "^3.10.0",
    "eslint": "^3.19.0",
    "eslint-plugin-react": "^7.0.1",
    "fluent-ffmpeg": "^2.1.2",
    "glob": "^7.1.2",
    "imagemin": "^5.3.1",
    "karma": "^1.7.0",
    "karma-browserify": "^5.1.1",
    "karma-chai": "^0.1.0",
    "karma-chrome-launcher": "^2.1.1",
    "karma-firefox-launcher": "^1.0.1",
    "karma-mocha": "^1.3.0",
    "lodash.template": "^4.4.0",
    "mkdirp": "^0.5.1",
    "mocha": "^3.4.2",
    "modernizr": "^3.5.0",
    "npm-run-all": "^4.0.2",
    "onchange": "^3.2.1",
    "postcss-calc": "^6.0.0",
    "postcss-cli": "^4.0.0",
    "postcss-custom-media": "^6.0.0",
    "postcss-custom-properties": "^6.0.1",
    "postcss-easings": "^1.0.0",
    "postcss-import": "^10.0.0",
    "postcss-nested": "^2.0.2",
    "postcss-reporter": "^3.0.0",
    "postcss-url": "^6.1.0",
    "sharp": "^0.18.1",
    "snake-case": "^2.1.0",
    "stylelint": "^7.10.1",
    "svgo": "^0.7.2",
    "tinify": "^1.5.0",
    "watchify": "^3.9.0",
    "yargs": "^8.0.1"
  }
}
